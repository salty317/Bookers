<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        Show
      </td>
      <td>
        Edit
      </td>
      <td>
        Destroy
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <div>
    <%= f.label :title, "Title" %>
    <br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Body" %>
    <br>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "Create Book" %>
<% end %>